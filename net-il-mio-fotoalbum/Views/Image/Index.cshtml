@model Image[]

@{
    ViewData["Title"] = "Il mio FotoAlbum";
    var images = Model;
}

<h1 class="text-center my-5">Tutte le mie foto!</h1>


@if (images.Length is 0)
{
    <p class="text-center">No images to display</p>
}
else
{    
<div class="row row-cols-4 g-3 mb-4">
    @foreach(var image in images)
    {
    <div class="col">
        <div class="card h-100">
            <img src="@image.Url" class="card-img-top" alt="@image.Title">
            <div class="card-body">
                <h5 class="card-title">@image.Title</h5>
                <p class="card-text">@image.Description</p>
                <a href="@Url.Action("Detail", "Image", new { Id = image.Id })" class="btn btn-primary">Dettagli</a>
            </div>
        </div>
    </div>        
    }
</div>
}